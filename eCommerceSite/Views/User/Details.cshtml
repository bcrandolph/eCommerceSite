using Microsoft.AspNet.Identity;
@model IEnumerable<eCommerceSite.Models.User>

@{
    ViewBag.Title = "Account Information";
}

<h2>Account Information</h2>

<table id="users" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Billing</th>
            <th>Shipping</th>
            <th>Payment</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#users").DataTable({
                ajax: {
                    url: "/api/user/",
                    dataType: "json",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name"
                    },
                    {
                        data: "billing"
                    },
                    {
                        data: "shipping"
                    },
                    {
                        data: "payment"
                    },
                    {
                        data: "id",
                        render: function (data, user) {
                            return "<a href='/user/edit/" + user.Id + "'> Edit </a>";
                        }
                    }
                ]
            })
        });
    </script>
}